{
    "compilerOptions": {
        "lib": [
            "ES6"
        ],
        "module": "Node16",
        "target": "ES6",
        "types": [],

        "moduleResolution": "node",
        "esModuleInterop": true,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noEmitOnError": true
    },
    
    "exclude": [
        "node_modules",
        "dist"
    ],

    "incremental": true
}
