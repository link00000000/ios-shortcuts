{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6"],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [],
        "noEmit": false,
        "incremental": true,
        "noUncheckedIndexedAccess": true
        // "paths": {
        //     "@ios/*": [
        //         "packages/*/src"
        //     ]
        // }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "incremental": true
}
