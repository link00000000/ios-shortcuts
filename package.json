{
    "name": "ios-shortcuts",
    "private": true,
    "scripts": {
        "actions": "act",
        "build": "pnpm -r build",
        "build:packages": "pnpm --filter ./packages/* build",
        "build:shortcuts": "pnpm --filter ./shortcuts/* build",
        "build:tools": "pnpm --filter ./tools/* build",
        "clean": "pnpm -r clean",
        "preinstall": "npx only-allow pnpm",
        "repl": "node -r ./packages/scriptable-simulator/dist -i",
        "simulate": "node -r ./packages/scriptable-simulator/dist"
    },
    "devDependencies": {
        "@dagger.io/dagger": "^0.8.4",
        "typescript": "~4.9.0"
    }
}
