{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6"],
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [],
        "noEmit": true,
        "incremental": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "paths": {
            "@ios-shortcuts/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "incremental": true
}
